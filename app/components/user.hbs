<div class="container has-text-centered">
    <div class="column is-3 is-offset-4">

      <LinkTo @route="users">
        <button class="button mb-2" type="button">
          Back to users
        </button>
      </LinkTo>

      <div class="user-profile">

        <figure class="avatar">
          <img src={{this.data.image}} width="256px" alt="User" />
        </figure>

        <p class="title has-text-white my-2">
          {{this.data.name}}
        </p>

        <p class="subtitle has-text-white my-2">
          Example Value:
          {{this.data.value}}
        </p>

        <p class="subtitle has-text-white my-2" data-test-toggle-archive-label>
          Archived: {{this.archivedLabel}}
        </p>
        <button class="button my-2" type="button" {{on 'click' this.toggleArchive}} data-test-toggle-archive>
          {{this.archiveButtonTitle}}
        </button>
        {{!-- Place the component to archive/unarchive users here --}}
      </div>
    </div>
  </div>
